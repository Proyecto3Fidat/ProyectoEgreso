<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cargar Foto de Perfil</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #1a1a1a;
            color: #ffffff;
        }
        .upload-container {
            background-color: #2a2a2a;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(255, 255, 255, 0.1);
            text-align: center;
        }
        .preview {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            margin: 20px auto;
            background-color: #3a3a3a;
            background-size: cover;
            background-position: center;
        }
        .file-input {
            display: none;
        }
        .upload-btn, .submit-btn {
            background-color: #8a2be2;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }
        .upload-btn:hover, .submit-btn:not(:disabled):hover {
            background-color: #9b4deb;
        }
        .submit-btn {
            opacity: 0.5;
        }
        .submit-btn:not(:disabled) {
            opacity: 1;
        }
    </style>
</head>
<body>
<div class="upload-container">
    <h2 style="color: #8a2be2;">Cargar Foto de Perfil</h2>
    <div class="preview" id="imagePreview"></div>
    <input type="file" id="fileInput" class="file-input" accept=".jpg, .jpeg, .png, .gif">
    <input type="hidden" id="docName" value="{{ documento }}" name="docName">
    <button class="upload-btn" onclick="document.getElementById('fileInput').click()">Seleccionar Imagen</button>
    <button class="submit-btn" id="submitBtn" disabled>Subir Imagen</button>
</div>

<script>
    const fileInput = document.getElementById('fileInput');
    const imagePreview = document.getElementById('imagePreview');
    const submitBtn = document.getElementById('submitBtn');
    const docName = '{{ documento }}';
    let selectedFile = null;

    fileInput.addEventListener('change', function(e) {
        selectedFile = e.target.files[0];
        if (selectedFile) {
            const allowedExtensions = ['image/jpeg', 'image/png', 'image/gif'];
            if (!allowedExtensions.includes(selectedFile.type)) {
                alert('Por favor, selecciona un archivo JPG, JPEG, PNG o GIF.');
                resetForm();
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.style.backgroundImage = `url(${e.target.result})`;
                submitBtn.disabled = false;
            }
            reader.readAsDataURL(selectedFile);
        }
    });

    submitBtn.addEventListener('click', function() {
        if (!selectedFile) {
            alert('Por favor, selecciona una imagen primero.');
            return;
        }

        submitBtn.textContent = 'Subiendo...';
        submitBtn.disabled = true;

        const formData = new FormData();
        formData.append('imagen', selectedFile);
        formData.append('docName', docName);

        fetch('/cargarImagen', {
            method: 'POST',
            body: formData
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error en la carga de la imagen');
                }
                return response.text();
            })
            .then(data => {
                alert('Imagen subida con Ã©xito!');
                resetForm();
            })
            .catch(error => {
                alert('Error al subir la imagen: ' + error.message);
                submitBtn.textContent = 'Subir Imagen';
                submitBtn.disabled = false;
            });
    });

    function resetForm() {
        submitBtn.textContent = 'Subir Imagen';
        submitBtn.disabled = true;
        imagePreview.style.backgroundImage = 'none';
        fileInput.value = '';
        selectedFile = null;
    }
</script>
</body>
</html>

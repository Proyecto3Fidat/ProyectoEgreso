<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda de Locales</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/58f9dcf30d.js" crossorigin="anonymous"></script>
    <style>
        :root {
            --primary-color: #6f41bb;
            --primary-hover: #58359b;
            --bg-color: #1e1c1f;
            --text-color: #ffffff;
            --input-bg: #2c2a2d;
            --border-color: #3f3f3f;
            --delete-color: #f44336;
            --delete-hover: #d32f2f;
            --add-color: #4CAF50;
            --add-hover: #45a049;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: transparent;
            color: var(--text-color);
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }

        main {
            max-width: 1200px;
            margin: 0 auto;
        }

        h2 {
            color: var(--primary-color);
            margin-bottom: 20px;
            font-size: 2rem;
        }

        .local-container {
            background-color: rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .agenda-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
            margin-bottom: 20px;
        }

        .agenda-table th, .agenda-table td {
            padding: 15px;
            text-align: left;
            background-color: rgba(255, 255, 255, 0.05);
        }

        .agenda-table th {
            background-color: var(--primary-color);
            color: white;
            font-weight: 600;
        }

        .agenda-table tr {
            transition: all 0.3s ease;
        }

        .agenda-table tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .edit-button, .delete-button, .add-agenda-button, .new-agenda-button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .delete-button {
            background-color: var(--delete-color);
            color: white;
        }

        .delete-button:hover {
            background-color: var(--delete-hover);
        }

        .add-agenda-button, .new-agenda-button {
            background-color: var(--add-color);
            color: white;
            display: inline-block;
            margin-top: 10px;
        }

        .add-agenda-button:hover, .new-agenda-button:hover {
            background-color: var(--add-hover);
        }

        iframe {
            width: 100%;
            height: 400px;
            border: none;
        }

        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 999;
        }

        .modal-content {
            background: var(--bg-color);
            padding: 40px;
            border-radius: 15px;
            border: 2px solid var(--primary-color);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
            position: relative;
            max-width: 700px;
            width: 90%;
            animation: fadeIn 0.3s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .modal-close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 30px;
            height: 30px;
            border: none;
            background: transparent;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-close-button::before,
        .modal-close-button::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 2px;
            background-color: var(--text-color);
            transition: background-color 0.3s ease;
        }

        .modal-close-button::before {
            transform: rotate(45deg);
        }

        .modal-close-button::after {
            transform: rotate(-45deg);
        }

        .modal-close-button:hover::before,
        .modal-close-button:hover::after {
            background-color: var(--primary-color);
        }

        @media (max-width: 768px) {
            .agenda-table, .agenda-table tbody, .agenda-table tr, .agenda-table td {
                display: block;
            }

            .agenda-table thead {
                display: none;
            }

            .agenda-table td {
                text-align: right;
                padding-left: 50%;
                position: relative;
            }

            .agenda-table td::before {
                content: attr(data-label);
                position: absolute;
                left: 6px;
                width: 45%;
                padding-right: 10px;
                white-space: nowrap;
                font-weight: bold;
            }

            .modal-content {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
<main>
    <button class="new-agenda-button" onclick="abrirModal('nuevaAgendaModal', '', '', '', '', '')">Nueva Agenda</button>
    {% if agenda is not null %}
        {% set grouped_agenda = {} %}
        {% for item in agenda %}
            {% set local = item.nombre %}
            {% if grouped_agenda[local] is not defined %}
                {% set grouped_agenda = grouped_agenda|merge({ (local): [item] }) %}
            {% else %}
                {% set grouped_agenda = grouped_agenda|merge({ (local): grouped_agenda[local]|merge([item]) }) %}
            {% endif %}
        {% endfor %}

        {% for local, agendas in grouped_agenda %}
            <div class="local-container">
                <h2>{{ local }}</h2>
                <table class="agenda-table">
                    <thead>
                    <tr>
                        <th>Día</th>
                        <th>Hora Inicio</th>
                        <th>Hora Fin</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in agendas %}
                        <tr>
                            <td data-label="Día">{{ item.dia }}</td>
                            <td data-label="Hora Inicio">{{ item.horaInicio }}</td>
                            <td data-label="Hora Fin">{{ item.horaFin }}</td>
                            <td data-label="Acciones">
                                <button class="delete-button" onclick="eliminarAgenda('{{ item.id }}', '{{ item.dia }}', '{{ item.horaInicio }}', '{{ item.horaFin }}', '{{ item.nombre }}')">Eliminar</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <button class="add-agenda-button" onclick="abrirModal('agregarModal', '{{ local }}', '', '', '', '{{ local }}')">Agregar Agenda</button>
            </div>
        {% endfor %}
    {% else %}
        <p>No hay agendas disponibles.</p>
    {% endif %}
</main>

<div id="agregarModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close-button" onclick="cerrarModal('agregarModal')"></button>
        <iframe id="agregarIframe"></iframe>
    </div>
</div>

<div id="nuevaAgendaModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close-button" onclick="cerrarModal('nuevaAgendaModal')"></button>
        <iframe id="nuevaAgendaIframe"></iframe>
    </div>
</div>

<script>
    function abrirModal(modalId, id, dia = '', horaInicio = '', horaFin = '', nombre = '') {
        var modal = document.getElementById(modalId);
        var iframe = document.getElementById(modalId.replace('Modal', 'Iframe'));
        if (modalId === 'agregarModal') {
            iframe.src = '/guardarAgenda?local=' + nombre;
        } else if (modalId === 'nuevaAgendaModal') {
            iframe.src = '/nuevaAgenda';
        }
        modal.style.display = 'flex';

        iframe.onload = function() {
            iframe.contentWindow.onbeforeunload = function() {
                cerrarModal(modalId);
            };
        };
    }

    function cerrarModal(modalId) {
        var modal = document.getElementById(modalId);
        modal.style.display = 'none';
    }

    function eliminarAgenda(id, dia, horaInicio, horaFin, nombre) {
        if (confirm('Estás seguro de que deseas eliminar esta agenda?')) {
            fetch('/eliminarAgenda?id=' + id + '&dia=' + dia + '&horaInicio=' + horaInicio + '&horaFin=' + horaFin + '&nombre=' + nombre, {
                method: 'DELETE'
            }).then(response => {
                if (response.ok) {
                    alert('Agenda eliminada con éxito');
                    location.reload();
                } else {
                    alert('Hubo un problema al eliminar la agenda');
                }
            }).catch(error => {
                console.error('Error:', error);
                alert('Hubo un error al eliminar la agenda');
            });
        }
    }

    window.onclick = function(event) {
        if (event.target.classList.contains('modal-overlay')) {
            event.target.style.display = 'none';
        }
    }
</script>
</body>
</html>

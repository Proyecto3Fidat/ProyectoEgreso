<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../Public/css/listaClienteAdmin.css">
    <link rel="stylesheet" href="../../Public/css/responsive.css">
    <script src="https://kit.fontawesome.com/58f9dcf30d.js" crossorigin="anonymous"></script>
    <title>Agenda de Locales</title>
    <style>
        .local-container {
            margin-bottom: 20px;
        }
        .agenda-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }
        .agenda-table th, .agenda-table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
        .edit-button, .delete-button, .add-agenda-button {
            margin: 5px;
            padding: 8px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        .delete-button {
            background-color: #f44336;
        }
        .edit-button:hover, .delete-button:hover, .add-agenda-button:hover {
            opacity: 0.8;
        }
        /* Estilo mejorado para el fondo del modal */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 999;
        }

        /* Estilo mejorado del contenido del modal */
        .modal-content {
            background: #1e1c1f;
            padding: 40px;
            border-radius: 15px;
            border: 5px solid #7a3afa;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
            position: relative;
            max-width: 700px;
            width: 90%;
            animation: fadeIn 0.3s ease-out;
        }

        /* Efecto de entrada suave */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal-close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 3em;
            height: 3em;
            border: none;
            background: rgba(255, 0, 0, 0.1);
            border-radius: 50%;
            cursor: pointer;
            transition: background 0.5s, box-shadow 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        /* Líneas de la "X" */
        .X, .Y {
            position: absolute;
            width: 1.5em;
            height: 2px;
            background-color: #ffffff;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .X {
            transform: rotate(45deg);
        }

        .Y {
            transform: rotate(-45deg);
        }

        /* Texto de "Close" emergente */
        .modal-close-button .close {
            position: absolute;
            display: flex;
            padding: 0.8rem 1.5rem;
            align-items: center;
            justify-content: center;
            transform: translateX(-50%);
            top: -80%;
            left: 50%;
            width: 4em;
            height: 2em;
            font-size: 12px;
            background-color: rgb(19, 22, 24);
            color: rgb(187, 229, 236);
            border: none;
            border-radius: 3px;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .modal-close-button:hover {
            background-color: rgba(239, 9, 9, 0.2);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .modal-close-button:active {
            background-color: rgb(236, 11, 11);
        }

        .modal-close-button:hover > .close {
            opacity: 1;
        }

        .modal-close-button:hover > .X,
        .modal-close-button:hover > .Y {
            background-color: #ffcccc;
        }
    </style>
</head>
<body>
<main>
    {% if agenda is not null %}
        {% set grouped_agenda = {} %}
        {% for item in agenda %}
            {% set local = item.nombre %}
            {% if grouped_agenda[local] is not defined %}
                {% set grouped_agenda = grouped_agenda|merge({ (local): [item] }) %}
            {% else %}
                {% set grouped_agenda = grouped_agenda|merge({ (local): grouped_agenda[local]|merge([item]) }) %}
            {% endif %}
        {% endfor %}

        <div class="local-container">
            {% for local, agendas in grouped_agenda %}
                <h2>{{ local }}</h2>
                <table class="agenda-table">
                    <thead>
                    <tr>
                        <th>Día</th>
                        <th>Hora Inicio</th>
                        <th>Hora Fin</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in agendas %}
                        <tr>
                            <td>{{ item.dia }}</td>
                            <td>{{ item.horaInicio }}</td>
                            <td>{{ item.horaFin }}</td>
                            <td>
                                <button class="delete-button" onclick="abrirModal('eliminarModal', '{{ item.id }}', '{{ item.dia }}', '{{ item.horaInicio }}', '{{ item.horaFin }}', '{{ item.nombre }}')">Eliminar</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <button class="add-agenda-button" onclick="abrirModal('agregarModal', '{{ local }}', '', '', '', '{{ local }}')">Agregar Agenda</button>
            {% endfor %}
        </div>
    {% else %}
        <p>No hay agendas disponibles.</p>
    {% endif %}
</main>

<div id="eliminarModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close-button" onclick="cerrarModal('eliminarModal')">
            <span class="X"></span>
            <span class="Y"></span>
            <div class="close">Close</div>
        </button>
        <iframe id="eliminarIframe" style="width: 100%; height: 100%; border: none;"></iframe>
    </div>
</div>

<div id="agregarModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close-button" onclick="cerrarModal('agregarModal')">
            <span class="X"></span>
            <span class="Y"></span>
            <div class="close">Close</div>
        </button>
        <iframe id="agregarIframe" style="width: 100%; height: 100%; border: none;"></iframe>
    </div>
</div>

<script>
    function abrirModal(modalId, id, dia = '', horaInicio = '', horaFin = '', nombre = '') {
        var modal = document.getElementById(modalId);
        var iframe = document.getElementById(modalId.replace('Modal', 'Iframe'));
        if (modalId === 'editarModal') {
            iframe.src = '/guardarAgenda?id=' + id + '&dia=' + dia + '&horaInicio=' + horaInicio + '&horaFin=' + horaFin + '&nombre=' + nombre;
        } else if (modalId === 'eliminarModal') {
            iframe.src = '/guardarAgenda?id=' + id + '&dia=' + dia + '&horaInicio=' + horaInicio + '&horaFin=' + horaFin + '&nombre=' + nombre;
        } else if (modalId === 'agregarModal') {
            iframe.src = '/guardarAgenda?local=' + nombre;
        }
        modal.style.display = 'flex';

        iframe.onload = function() {
            iframe.contentWindow.onbeforeunload = function() {
                cerrarModal(modalId);
            };
        };
    }

    function cerrarModal(modalId) {
        var modal = document.getElementById(modalId);
        modal.style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target.classList.contains('modal-overlay')) {
            event.target.style.display = 'none';
        }
    }
</script>
</body>
</html>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Verificar autenticación al cargar la página
            fetch('/verificarsesion')
                .then(response => response.json())
                .then(data => {
                    if (!data.authenticated) {
                        // Mostrar mensaje de alerta y redirigir si no está autenticado
                        alert('No tiene permisos para ver esta página');
                        window.location.href = '/login'; // Redirigir al usuario
                    }
                })
                .catch(error => {
                    console.error('Error al verificar la sesión:', error);
                    alert('Hubo un problema al verificar la sesión.');
                    window.location.href = '/login'; // Redirigir al usuario en caso de error
                });
        });
    </script>
